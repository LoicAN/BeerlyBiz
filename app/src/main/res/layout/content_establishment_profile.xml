<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="beerly.ansteph.beerlybiz.view.profile.EstablishmentProfile"
    tools:showIn="@layout/activity_establishment_profile">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="60dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Account Name" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstAccountName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Name" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Address" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Latitude" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstLatitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Longitude" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstLongitude"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Liquor License" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstLiquorLicense"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Health &amp; Safety " />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstHS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Contact Person" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstContactPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Contact Number" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEstContactNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>




            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Last Inspection Date" />

            <TextView
                android:id="@+id/txtEstInspectionDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="18sp"
                android:text="2018/01/01"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Establishment Url" />



            <android.support.design.widget.TextInputLayout
                android:visibility="visible"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/txtEsturl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:textColor="#3e3e3e"
                    android:textSize="18sp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:clickable="true"
                    android:enabled="true"
                    android:focusable="false"
                    android:singleLine="true" />

            </android.support.design.widget.TextInputLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@color/colorAccent"/>
            <TextView
android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:textColor="#3e3e3e"
                android:textSize="14sp"
                android:text="Status" />
            <Spinner
                android:visibility="gone"
                style="@style/spinner_style"
                android:id="@+id/spnedtGender"
                android:layout_width="match_parent"
                android:layout_height="?listPreferredItemHeight"></Spinner>



        </LinearLayout>

    </ScrollView>
    <Button
        android:id="@+id/btnUpdate"
        style="?android:textAppearanceSmall"
        android:background="@color/colorDarkGrey"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:paddingRight="10dp"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:text="Done"
        android:onClick="onDoneClicked"
        android:textSize="16sp"
        android:textStyle="bold"/>
</RelativeLayout>
